{% extends "layout.html.twig" %}
{% block content %}
<div class="container">
  <form action="" method="post">
    <div class="form-group">
      <label for="title">Title:</label>
      <input type="text" class="form-control" id="title" name="title" placeholder="Hot Spot" value="{{ page.title }}">
    </div>
    <div class="form-group">
      <label for="title">Document Name:</label>
      <input type="text" class="form-control" id="docName" name="docName" placeholder="Document Name" value="{{ page.docName }}">
    </div>
    <div class="form-group">
      <label for="title">Keyword:</label>
      <input type="text" class="form-control" id="keywords" name="keywords" placeholder="Hot Spot" value="{{ page.keywords }}">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <input type="text" class="form-control input-group-lg" id="description" name="description" value="{{ page.description }}" />
    </div>
    <div class="form-group">
      <label for="description">Category</label>
      <input type="text" class="form-control input-group-lg" id="category" name="category" value="{{ page.category }}" />
    </div>
    <div class="form-group">
      <label for="exampleFormControlSelect2">Example multiple select</label>
    </div>
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Example textarea</label>
      <textarea class="form-control" id="exampleFormControlTextarea1" rows="3">{{ page.content }}</textarea>
    </div>
    <div><button class="btn btn-outline-primary">Save</button> </div>
  </form>
</div>
{% endblock %}