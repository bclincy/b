{% extends "layout.html.twig" %}

{% block content %}
    <!-- Name Section -->
    {#<pre>{{ dump(data) }}</pre>#}
    <h1>Advisory Board</h1>
    <p>Signing up to be a member of Brian Clincy's Advisory Board.<br />
        <a href="/about/advisoryboard" class="btn btn-outline-primary">learn more</a></p>
    <form id="advisorApp">
        <h2>Advisory Board Application</h2>
        <div class="row">
            <div class="col">
                <label for="fname">First Name</label>
                <input type="text" id="fname" name="fname" class="form-control" placeholder="James" required>
            </div>
            <div class="col">
                <label for="lname">Last Name</label>
                <input type="text" id="lname" name="lname" class="form-control" placeholder="Smith" required>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" placeholder="ie: VP of Technology, Board Chair">
            </div>
            <div class="form-group col-md-6">
                <label for="email">Email</label>
                <input type="email" name="email" class="form-control" id="email" placeholder="somebody@home.com">
            </div>
        </div>
        <div class="form-group">
            <label for="bio">Bio/Profile</label>
            <textarea class="form-control" id="bio" placeholder="1 time all star 3 time time professional play of the year."></textarea>
        </div>
        <div class="form-group">
            <label for="inputAddress2">Address 2</label>
            <input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label for="inputCity">City</label>
                <input type="text" class="form-control" id="inputCity">
            </div>
            <div class="form-group col-md-4">
                <label for="inputState">State</label>
                <select id="inputState" class="form-control">
                    <option selected>Choose...</option>
                    <option>...</option>
                </select>
            </div>
            <div class="form-group col-md-2">
                <label for="inputZip">Zip</label>
                <input type="text" class="form-control" id="inputZip">
            </div>
        </div>
        <div class="form-group">
            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox"> Check me out
                </label>
            </div>
        </div>
    </form>
{% endblock %}
{% block javascript %}

    document.addEventListener(document.querySelector('#'))
{% endblock %}